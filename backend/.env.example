# Application Settings
PROJECT_NAME=Spond Admin API
API_V1_PREFIX=/api/v1
DEBUG=false

# CORS Settings (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Database
DATABASE_URL=sqlite+aiosqlite:///./spond_admin.db
# For PostgreSQL, use:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/spond_admin

# Security
# REQUIRED: Generate a secure secret key using: openssl rand -hex 32
# Must be at least 32 characters long
SECRET_KEY=REPLACE_THIS_WITH_OUTPUT_FROM_openssl_rand_hex_32
ALGORITHM=HS256
# Token expiry in minutes (default: 60 minutes / 1 hour)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Spond API Credentials
SPOND_USERNAME=your-spond-email@example.com
SPOND_PASSWORD=your-spond-password

# Cache Settings (in seconds)
CACHE_TTL_EVENTS=300
CACHE_TTL_GROUPS=3600
CACHE_TTL_MEMBERS=3600

# Sync Settings (Legacy - kept for backwards compatibility)
AUTO_SYNC_ENABLED=true
SYNC_INTERVAL_MINUTES=15

# Background Scheduler Settings
# Enable/disable automatic synchronization for each entity type
SYNC_EVENTS_ENABLED=true
SYNC_EVENTS_INTERVAL_MINUTES=60
SYNC_EVENTS_MAX_EVENTS=500

SYNC_GROUPS_ENABLED=true
SYNC_GROUPS_INTERVAL_MINUTES=360

SYNC_MEMBERS_ENABLED=true
SYNC_MEMBERS_INTERVAL_MINUTES=360
